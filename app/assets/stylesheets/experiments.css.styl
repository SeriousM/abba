@import './mixins'

section.experiments {
  hbox()

  .list {
    box-flex: 1
    margin-right: 0px
  }

  .new {
    width: 420px
    height: 100%
  }

  pre {
    margin: 0
    overflow-x: auto
  }

  table tr {

    .state {
      width: 20px;
      &.active {
        background-color: #82c82d;
      }

      &.inactive {
        background-color: #b90000;
      }
    }


    .index {
      width: 20px
    }

    .actions {
      text-align: right
    }
  }
}
